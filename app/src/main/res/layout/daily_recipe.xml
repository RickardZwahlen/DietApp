<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="fill_parent">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <ImageView
            android:id="@+id/ivDailyFood"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

        <TextView
              android:id="@+id/tvDailyRecipeName"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="Ingredients:"
              android:textStyle="bold"
              android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
              android:id="@+id/tvDailyIngredientHeader"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
              android:id="@+id/tvDailyIngredients"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textAppearance="?android:attr/textAppearanceLarge" />

       <TextView
           android:id="@+id/tvDailyInstructionsHeader"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textAppearance="?android:attr/textAppearanceLarge" />
       <TextView
           android:id="@+id/tvDailyInstructions"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textAppearance="?android:attr/textAppearanceLarge" />

        <ImageView
            android:id="@+id/ivSwapRecipe"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:adjustViewBounds="true"
            android:src="@drawable/shuffle" />

        </LinearLayout></LinearLayout>
</ScrollView>

</LinearLayout>